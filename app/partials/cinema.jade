  h2.ui.header.inline
    .ui.simple.dropdown
      .text {{title}}
      i.dropdown.icon
      .menu
        .item(ng-repeat="(channel, status) in channels",ng-show="status.live")
          a(ng-href="/cinema/{{channel}}/live") {{ channelNames[channel] }}
  #notlive(ng-hide="channels[sitting].live")
    h1 即將上映
  #egg-realm(ng-controller="Danmaku",ng-show="channels[sitting].live")
    #video-wrapper
      video#cinema-player(width="650px",height="400px",preload="auto",mediaelement,src="{{vsrc}}")
      #eggninja
        #crosshair
    #action-buttons
      .ui.buttons
        .ui.small.button.green(ng-click="flower($event,'flower')") 獻花
        .ui.small.button.green(ng-click="flower($event,'boat')") 護航
        .ui.small.button.green(ng-click="raiseNet($event)") 張網
      .ui.buttons(style="margin-left: 5px")
        .ui.small.button.red(ng-click="objection($event,'white-banner')") 抬棺
      form(ng-submit="addComment();newComment=''")
        .ui.input.mini
          input.fire(type="text",placeholder="輸入彈幕",ng-model="newComment")
        button.ui.small.button.blue.fire(ng-disabled="!newComment",type="submit") 發射!
  #action-stats
  .archive(ng-show="loaded")
    #wav-root
      .wav-group(ng-repeat="waveform in waveforms")
        ng-waveform(ng-model="waveform")
    #avatar-tooltip.ui.label.pointing.below
      img
      .name
  .panel.detail(ng-show="loaded")
    .ui.label.ribbon.red 詳細資料
    .ib
      .title: a(target="_blank",ng-href="http://ly.g0v.tw/sittings/{{sitting}}") {{detail.name}}
      .desc {{detail.summary}}
      .session(ng-repeat="s in detail.dates")
        .chair 主席: {{s.chair}}
        .date 日期: {{s.date}}
